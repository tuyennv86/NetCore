<div class="modal fade" id="modalTourDate" data-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form class="form-horizontal" id="frmMaintainance" name="frmMaintainance" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Lịch trình tour : <span id="sptourName"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Lịch trình</label>
                        <div class="col-sm-10">
                            <input type="text" name="txtTourDateName" class="form-control" id="txtTourDateName" placeholder="Nhập tên tour">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Nội dung</label>
                        <div class="col-sm-10">
                            <input type="hidden" id="hidIdTour" value="0" />
                            <input type="hidden" id="hidIdTime" value="0" />
                            <textarea rows="3" name="txtTourDateConten" class="form-control" id="txtTourDateConten"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Lịch trình</label>
                        <div class="col-sm-10">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="button" class="btn btn-primary" id="btSaveTourDate">Cập nhật</button>
                        </div>
                    </div>

                    <ul class="list-group list-group-numbered" id="tpl_contentTourDate">
                    </ul>

                </div>
                <div class="modal-footer">

                </div>
            </form>
        </div>
    </div>
</div>

<script type="x-tmpl-mustache" id="mp_tempTourdate">
        {{#tourTagDate}}
        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <h5 class="fw-bold text-primary">{{name}}</h5>
                {{{conten}}}
            </div>
            <span class="badge rounded-pill">
                <span class="badge-pill"><a href="#" data-id="{{id}}" id="lbtDelTourDate"><i class="fas fa-trash text-danger"></i></a></span>
                <span class="badge-pill"><a href="#" data-id="{{id}}" id="lbtEditTourDate"><i class="fas fa-pencil-alt"> </i></a></span>
            </span>
        </li>
        {{/tourTagDate}}
</script>