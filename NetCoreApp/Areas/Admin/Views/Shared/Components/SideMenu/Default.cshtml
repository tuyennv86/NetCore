@model List<FunctionViewModel>

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="#" class="brand-link">
        <img src="~/admin/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
        <span class="brand-text font-weight-light">Admin</span>
    </a>
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                @foreach (var item in Model)
                {
                    if (item.ParentId == null)
                    {
                        var itemChild = Model.Where(x => x.ParentId == item.Id);
                        if (itemChild.Count() > 0)
                        {
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="@item.IconCss"></i>
                                    <p>
                                        @item.Name
                                        <i class="fas fa-angle-left right"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    @foreach (var itemC in Model.Where(x => x.ParentId == item.Id))
                                    {
                                        <li class="nav-item">
                                            <a href="@itemC.URL" class="nav-link">
                                                <i class="@itemC.IconCss"></i>
                                                <p>@itemC.Name</p>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a href="@item.URL" class="nav-link">
                                    <i class="@item.IconCss"></i>
                                    <p>
                                        @item.Name
                                    </p>
                                </a>
                            </li>
                        }

                    }
                }
            </ul>
        </nav>
    </div>
</aside>